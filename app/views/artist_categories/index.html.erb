<h1>Artist Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
     
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>

        <td><%= link_to "Edit", edit_artist_category_path(category) %></td>
        <td><%= button_to "Delete", artist_categories_del_path(category), method: :delete, :onclick=> "return confirm('Are you sure?')"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Add new category", new_artist_category_path %></p>
 